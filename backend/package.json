{
  "name": "mainwebsite-backend",
  "version": "5.0.0",
  "description": "Backend server for MainWebSite media management app",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development npx nodemon server.js",
    "dev:unix": "NODE_ENV=development nodemon server.js",
    "build": "echo Building React app... && cd ../react-app && npm run build",
    "build:prod": "npm run build && npm run prod",
    "prod": "cross-env NODE_ENV=production node server.js",
    "prod:unix": "NODE_ENV=production node server.js",
    "deploy": "echo Full production deployment... && npm run build && npm run prod",
    "check:build": "if exist \"../react-app/dist\" (echo React build exists) else (echo React build missing - run npm run build first)",
    "legacy": "node ../scripts/build.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "better-sqlite3": "^11.9.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "glob": "^11.0.3",
    "hammerjs": "^2.0.8",
    "lru-cache": "^11.1.0",
    "mime-types": "^3.0.1",
    "music-metadata": "^11.2.3",
    "serve-favicon": "^2.5.0",
    "string-natural-compare": "^3.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "esbuild": "^0.19.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "media",
    "manga",
    "movie",
    "music",
    "express",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
