{
  "name": "main-website-react",
  "version": "5.0.0",
  "description": "React version of MainWebSite - Media management app for manga, movies, and music",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:prod": "set NODE_ENV=production && vite build --mode production",
    "build:prod:unix": "NODE_ENV=production vite build --mode production",
    "preview": "vite preview --host",
    "preview:prod": "npm run build:prod && vite preview --host --port 3002",
    "deploy": "npm run clean && npm run build:prod && cd ../backend && npm run prod",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "clean": "rmdir /s /q dist",
    "clean:unix": "rm -rf dist",
    "analyze": "vite build --mode analyze",
    "check:env": "node -e \"console.log('Environment check:', process.env)\""
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.0",
    "axios": "^1.9.0",
    "clsx": "^1.2.1",
    "date-fns": "^4.1.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^10.12.12",
    "lucide-react": "^0.535.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.8.0",
    "react-intersection-observer": "^9.4.3",
    "react-lazy-load-image-component": "^1.6.3",
    "react-modal": "^3.16.1",
    "react-player": "^2.12.0",
    "react-router-dom": "^6.8.1",
    "react-virtualized": "^9.22.5",
    "string-natural-compare": "^3.0.1",
    "use-debounce": "^9.0.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.9"
  },
  "keywords": [
    "react",
    "manga",
    "movie",
    "music",
    "media-player",
    "local-media",
    "pwa",
    "tailwindcss",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
