# 🌍 Environment Variables for MainWebSite React App
# Copy this file to .env.local for local development

# ⚙️ Application Settings
VITE_APP_NAME=MainWebSite React
VITE_APP_VERSION=1.0.0

# 🌐 Backend API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_BACKEND_PORT=3000

# 🔧 Development Settings
VITE_DEV_PORT=3001
VITE_DEV_HOST=localhost

# 🎯 Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEV_TOOLS=true

# 📊 Performance Settings
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# 🎨 UI Settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true

# 🔒 Security (DO NOT put real secrets here - use .env.local)
# VITE_API_KEY=your-api-key-here
# VITE_SECRET_KEY=your-secret-here

# 📝 Note: 
# - Variables starting with VITE_ are available in the browser
# - Keep sensitive data in .env.local (not committed to git)
# - Backend server must be running on the specified port
